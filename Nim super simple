var count = 0;
var winner = null;
var turn = 0;

while (count < 21) {
  turn = Math.floor(Math.random()*3)+1;
  count += turn;
  alert("computer counts "+turn+" and now count is "+count);
  if (count >= 21) {
    winner = "you";
    break;
  }
  turn = parseInt(prompt("how many do you count?"));
  count += turn;
  alert("count is now "+count);
  winner = "computer";
}
alert(winner+" won!");
